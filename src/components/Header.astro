---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
---

<header>
  <h2 class="text-4xl font-black font-sans mb-2">
    {SITE_TITLE}
  </h2>
  <p class="text-gray-400">{SITE_DESCRIPTION}</p>
  <nav>
    <HeaderLink href="/">Home</HeaderLink>
    <HeaderLink href="/blog">Blog</HeaderLink>
    <HeaderLink href="/about">About</HeaderLink>
    <HeaderLink href="https://twitter.com/astrodotbuild" target="_blank"
      >Twitter</HeaderLink
    >
    <HeaderLink href="https://github.com/withastro/astro" target="_blank"
      >GitHub</HeaderLink
    >
  </nav>
</header>
<style>
  header {
    margin: 0em 0 2em;
  }
  h2 {
    margin: 0.5em 0;
  }
</style>
